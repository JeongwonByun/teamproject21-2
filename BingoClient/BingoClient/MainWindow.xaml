        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BingoClient"
        mc:Ignorable="d"
        Title="Bingo" Height="719.2" Width="402" Closing="Window_Closing" >
    <Grid Margin="0,0,0.2,-0.4">
