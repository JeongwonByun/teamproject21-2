        <Button x:Name="btnStart" Content="start" HorizontalAlignment="Left" Height="32" Margin="267,419,0,0" VerticalAlignment="Top" Width="80" Click="btnStart_Click" FontFamily="Rockwell Extra Bold" Background="#FFD4A0A0"/>
        
